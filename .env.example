# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Configuration (optional - can use google-services.json instead)
# These are typically loaded from google-services.json / GoogleService-Info.plist
# FIREBASE_API_KEY=your_firebase_api_key
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_APP_ID=your_app_id

# Google OAuth Configuration (optional - can use google-services.json)
# GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com

# YouTube Data API Configuration (for Resource Finder feature)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Development Mode Configuration
# Set DEV_MODE=true to use mock data instead of making real API calls
# This prevents API charges during UI/UX testing and development
# DEV_MODE=true

# Usage Tracking (Default: true)
# Track API calls and estimated costs to monitor spending
# ENABLE_USAGE_TRACKING=true

# Response Caching (Default: true)
# Cache Gemini responses to avoid re-analyzing the same files
# Caches expire after 7 days automatically
# ENABLE_RESPONSE_CACHE=true
